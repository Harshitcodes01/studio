{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information, including their role for RBAC.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "description": "The user's role in the application.",
          "enum": ["admin", "operator", "auditor"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was created."
        }
      },
      "required": ["email", "role", "createdAt"]
    },
    "WipeJob": {
      "title": "Wipe Job",
      "description": "Represents a single data wipe job for a device.",
      "type": "object",
      "properties": {
        "jobId": { "type": "string", "description": "Unique identifier for the job." },
        "createdByUid": { "type": "string", "description": "UID of the user who created the job." },
        "createdByEmail": { "type": "string", "description": "Email of the user who created the job." },
        "status": { "type": "string", "enum": ["Queued", "Running", "Verifying", "Completed", "Failed", "Cancelled"], "description": "The current status of the wipe job." },
        "deviceId": { "type": "string" },
        "devicePath": { "type": "string" },
        "deviceModel": { "type": "string" },
        "deviceSerial": { "type": "string" },
        "deviceSize": { "type": "string" },
        "policy": { 
          "type": "object", 
          "properties": {
            "name": { "type": "string" },
            "passes": { "type": "number" }
          }
        },
        "progress": { "type": "number", "description": "Job progress from 0-100." },
        "speedMBps": { "type": "number", "description": "Current wipe speed in MB/s." },
        "etaSeconds": { "type": "number", "description": "Estimated time remaining in seconds." },
        "logs": { "type": "array", "items": { "type": "string" }, "description": "An array of log messages for the job." },
        "createdAt": { "type": "string", "format": "date-time" },
        "startedAt": { "type": "string", "format": "date-time" },
        "endedAt": { "type": "string", "format": "date-time" },
        "errorMessage": { "type": "string" }
      },
      "required": ["jobId", "createdByUid", "status", "deviceId", "devicePath", "policy", "progress", "createdAt"]
    },
    "Certificate": {
      "title": "Wipe Certificate",
      "description": "Represents a tamper-proof certificate for a completed wipe job.",
      "type": "object",
      "properties": {
        "certificateId": { "type": "string" },
        "jobId": { "type": "string" },
        "deviceSerial": { "type": "string" },
        "deviceModel": { "type": "string" },
        "deviceType": { "type": "string" },
        "deviceSize": { "type": "string" },
        "wipeMethod": { "type": "string" },
        "wipePasses": { "type": "number" },
        "verificationResult": { "type": "string" },
        "startedAt": { "type": "string", "format": "date-time" },
        "endedAt": { "type": "string", "format": "date-time" },
        "createdByUid": { "type": "string" },
        "createdByEmail": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "logHash": { "type": "string", "description": "SHA256 hash of the job logs." }
      },
      "required": ["certificateId", "jobId", "deviceSerial", "wipeMethod", "verificationResult", "startedAt", "endedAt", "createdAt", "logHash"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile data, including roles for RBAC. Only the user themselves or an admin can read/write this data."
    },
    "/wipeJobs/{jobId}": {
      "schema": {
        "$ref": "#/entities/WipeJob"
      },
      "description": "Stores data wipe job information."
    },
    "/certificates/{certificateId}": {
      "schema": {
        "$ref": "#/entities/Certificate"
      },
      "description": "Stores wipe certificates. Authenticated users can read them, but only system processes (admins/operators) can create them."
    }
  }
}
