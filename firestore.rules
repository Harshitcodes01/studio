rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Helper function to get the role of the current user
    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Helper function to check if the user has a specific role
    function hasRole(role) {
      return isSignedIn() && getRole() == role;
    }

    // Helper function to check if the user has one of several roles
    function hasAnyRole(roles) {
      return isSignedIn() && getRole() in roles;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can read their own profile
      // An admin can read any user's profile
      allow get: if isOwner(userId) || hasRole('admin');
      
      // A user can create their own profile upon signup
      allow create: if isOwner(userId);
      
      // A user can update their own profile (e.g. display name)
      // An admin can update any user's profile (e.g. to change a role)
      // The role and email fields cannot be changed by non-admins
      allow update: if (isOwner(userId) && !(request.resource.data.role != resource.data.role || request.resource.data.email != resource.data.email)) || hasRole('admin');
      
      // Only admins can delete user profiles
      allow delete: if hasRole('admin');
      
      // Nobody can list all users
      allow list: if false;
    }
    
    // Rules for the 'wipeJobs' collection
    match /wipeJobs/{jobId} {
      // Admins, operators, and auditors can read and list jobs.
      allow get, list: if hasAnyRole(['admin', 'operator', 'auditor']);
      
      // Only operators and admins can create jobs.
      allow create: if hasAnyRole(['admin', 'operator']);

      // Only operators and admins can update jobs (e.g., status, progress).
      allow update: if hasAnyRole(['admin', 'operator']);
      
      // Only admins can delete jobs.
      allow delete: if hasRole('admin');
    }

    // Rules for the 'certificates' collection
    match /certificates/{certificateId} {
        // Public can read a specific certificate (for verification)
        allow get: if true;
        
        // Authenticated users can list certificates
        allow list: if isSignedIn();

        // Only operators and admins can create certificates.
        allow create: if hasAnyRole(['admin', 'operator']);

        // Certificates are immutable.
        allow update, delete: if false;
    }
    
    // Fallback rule: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
